# set to yes if you want Conky to be forked in the background
background yes

border_margin 0
border_width 0

# Use Xft?
use_xft no

# Xft font when Xft is enabled
font -*-profont-*-*-*-*-12-*-*-*-*-*-*-*

# Text alpha when using Xft
# xftalpha 1

# Update interval in seconds
update_interval 5

# This is the number of times Conky will update before quitting.
# Set to zero to run forever.
total_run_times 0

own_window yes
own_window_type dock
own_window_transparent no
#own_window_colour ffffff
#own_window_hints below

# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

# Minimum size of text area
minimum_size 500 14

# Maximum width
maximum_width 500

# Draw shades?
draw_shades no

# Draw outlines?
draw_outline no

# Draw borders around text
draw_borders yes

# Draw borders around graphs
draw_graph_borders no

# Stippled borders?
# stippled_borders 8

# border margins
# border_margin 2

# border width
# border_width 1

# Default colors and also border colors
default_color ffffff
default_shade_color red
default_outline_color green
color1 a3c5e7
color2 bbbbbb
color3 c8c8c8
color4 c7dff7
color5 e9e9e9

# Text alignment, other possible values are commented
alignment top_right
#alignment top_left
#alignment bottom_left
#alignment bottom_right
#alignment none

# Gap between borders of screen and text
# same thing as passing -x at command line
gap_x 60
gap_y 2

# Subtract file system buffers from used memory?
no_buffers yes

# set to yes if you want all text to be in uppercase
uppercase no

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 4

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

# variable is given either in format $variable or in ${variable}
#mpd
# ${color1}${mpd_artist}$color - ${mpd_title} ${color3}::$color
# ${color1}MPD ${color4}$mpd_smart ${color3}::

TEXT
${color1}CPU$color ${cpu cpu1}% ${color1}${execi 20 echo $[$(sensors coretemp-isa-0000 | grep 'Core 0' | awk '{print $3}' | sed '{s/[^.0-9]//g}' | cut -d'.' -f1)-16]}${color}C ${cpu cpu2}% ${color1}${execi 20 echo $[$(sensors coretemp-isa-0001 | grep 'Core 1' | awk '{print $3}' | sed '{s/[^.0-9]//g}' | cut -d'.' -f1)-16]}${color}C ${color3}::$color ${color1}RAM$color ${memperc}% ${color3}::$color ${color1}DiskF${color} ${color1}R${color}${fs_free /} ${color1}H${color}${fs_free /home/seynthantx} ${color3}::$color ${color1}V${color} ${exec amixer get Master | awk '/Front Left:/ {print $5}' | tr '[]' ' ' | awk '{print $1}'} ${color3}::${color5}${time %k:%M.%d/%m}
